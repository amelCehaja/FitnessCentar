@model FitnessCentar.web.ViewModels.AjaxVMs.AjaxDodajDanVjezbaVM
<form>
    <input asp-for="DanID" readonly hidden />

    <div class="form-group">
        <label>Vjezba:</label>
        <select asp-for="VjezbaID" asp-items="Model.Vjezbe" class="form-control"></select> 
        <span asp-validation-for="VjezbaID" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Redni broj vjezbe:</label>
        <select asp-for="RedniBroj" asp-items="Model.RedniBrojevi" class="form-control"></select>
    </div>
    <div class="form-group">
        <label>Broj setova:</label>
        <input asp-for="BrojSetova" class="form-control" min="0"/>
        <span asp-validation-for="BrojSetova" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Broj ponavljanja:</label>
        <input asp-for="BrojPonavljanja" class="form-control" min="0"/>
        <span asp-validation-for="BrojPonavljanja" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Duzina odmora</label>
        <input asp-for="DuzinaOdmora" class="form-control" min="0"/>
        <span asp-validation-for="DuzinaOdmora" class="text-danger"></span>
    </div>
    <button class="btn btn-success">Spremi</button>
</form>
<script>
    $("form").submit(function (e) {
        e.preventDefault()
        $.ajax({
            url: "/ajax/spremidanvjezba",
            data: $("form").serialize(),
            success: function (result) {
                $("#ajaxDiv").html(result)
            }
        })
    })
</script>