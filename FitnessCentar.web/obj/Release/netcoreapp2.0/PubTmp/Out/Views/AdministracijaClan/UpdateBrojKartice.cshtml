@model FitnessCentar.web.ViewModels.AdministracijaVMs.UpdateBrojKarticeVM
@{
    ViewData["Title"] = "UpdateBrojKartice";
    Layout = "~/Views/Shared/AdministracijaLayout.cshtml";
}

<h2>Promijeni broj kartice</h2>
<form action="/administracijaClan/SpremiBrojKartice" style="width:450px;">
    <div class="form-group">
        <label>Ime i prezime:</label>
        <input asp-for="ImePrezime" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label>Broj kartice:</label>
        <input asp-for="BrojKartice" class="form-control" />
        <span asp-validation-for="BrojKartice" class="text-danger"></span>
    </div>
    <button class="btn btn-success" type="submit">Spremi</button>
</form>

