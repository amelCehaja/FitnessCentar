@model FitnessCentar.web.ViewModels.AjaxVMs.AjaxDodajSkladisteVM
<form id="stavkaForma">
    <input asp-for="SkladisteID" readonly hidden/>
    <input asp-for="StavkaID" readonly hidden/>
    <div class="form-group">
        <label>Vrsta:</label>
        <input asp-for="Velicina" class="form-control"/>
        <span asp-validation-for="Velicina" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Kolicina:</label>
        <input asp-for="Kolicina" class="form-control" min="0"/>
        <span asp-validation-for="Kolicina" class="text-danger"></span>
    </div>
    <button class="btn btn-success">Spremi</button>
</form>
<script>
    $(document).ready(function () {
        $("#stavkaForma").submit(function (e) {
            e.preventDefault()
            $.ajax({
                url: "/ajax/SpremiSkladiste",
                data: $("#stavkaForma").serialize(),
                success: function (result) {
                    $("#ajaxDiv").html(result)
                }
            })
        })
    })
</script>