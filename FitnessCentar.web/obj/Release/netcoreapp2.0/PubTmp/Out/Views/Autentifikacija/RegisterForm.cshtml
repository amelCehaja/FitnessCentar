@model FitnessCentar.web.ViewModels.Autentifikacija.RegisterVM
@{
    ViewData["Title"] = "Register";
    Layout = "LayoutAnonim";
}

<div class="col-md-4 col-md-offset-4">
    <h2>Register</h2>

    <form asp-action="Register">
        <div class="form-group">
            <label>Ime: </label>
            <div>
                <input asp-for="Ime" class="form-control" />
                <span asp-validation-for="Ime" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label>Prezime: </label>
            <div>
                <input asp-for="Prezime" class="form-control" />
                <span asp-validation-for="Prezime" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label>Email: </label>
            <div>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label>Korisičko ime: </label>
            <div>
                <input asp-for="KorisnickoIme" class="form-control" />
                <span asp-validation-for="KorisnickoIme" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label>Lozinka: </label>
            <div>
                <input asp-for="Lozinka" class="form-control" />
                <span asp-validation-for="Lozinka" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label>Ponovi lozinku: </label>
            <div>
                <input asp-for="LozinkaPonovi" class="form-control" />
                <span asp-validation-for="LozinkaPonovi" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label>Spol: </label>
            <div>
                <select asp-for="Spol" asp-items="Model.SpolList"></select>
            </div>
        </div>

        <div class="form-group">
            <label>Datum rođenja: </label>
            <div>
                <input asp-for="DatumRodjenja" type="date" class="form-control" />
            </div>
        </div>
        <input type="submit" class="form-control btn btn-primary" value="Register" />
    </form>
</div>
